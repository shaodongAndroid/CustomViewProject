<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="normalResource"
        android:text="normal-resource" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="normalFile"
        android:text="normal-file" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="resourceOptimized"
        android:text="resource-optimized" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="fileOptimized"
        android:text="file-optimized" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="downSample"
        android:text="down-sample" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="clearMemory"
        android:text="clear-memory" />


</LinearLayout>
